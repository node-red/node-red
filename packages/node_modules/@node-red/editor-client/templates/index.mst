<!-- Conditional Tally Survey Widget -->
{{#tallyConfig.surveyId}}
<script src="https://tally.so/widgets/embed.js"></script>
{{/tallyConfig.surveyId}}
{{#tallyConfig.surveyId}}
<script>
(function() {
    // Floating action button for Tally survey
    var button = document.createElement('div');
    button.innerHTML = 'üí¨';
    button.style.cssText = `
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        border-radius: 30px;
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        font-size: 24px;
        z-index: 9999;
        transition: all 0.3s ease;
        animation: pulse 2s infinite;
    `;
    
    var style = document.createElement('style');
    style.textContent = `
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }
    `;
    document.head.appendChild(style);
    
    var widget = null;
    var isMinimized = false;
    
    function showSurvey() {
        if (widget) return;
        
        widget = Tally.openPopup('{{tallyConfig.surveyId}}', {
            layout: 'modal',
            width: 700,
            height: 600,
            autoClose: 0,
            hideTitle: false,
            overlay: true,
            emoji: {
                text: 'üí¨',
                animation: 'wave'
            },
            onClose: function() {
                widget = null;
                button.style.display = 'flex';
            }
        });
        
        button.style.display = 'none';
    }
    
    function createMinimizeButton() {
        if (isMinimized) return;
        
        var minimizeBtn = document.createElement('div');
        minimizeBtn.innerHTML = '‚ûñ';
        minimizeBtn.style.cssText = `
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 40px;
            height: 40px;
            border-radius: 20px;
            background: rgba(0, 123, 255, 0.8);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 16px;
            z-index: 10000;
        `;
        
        minimizeBtn.onclick = function() {
            if (widget) {
                Tally.closePopup();
                widget = null;
            }
            isMinimized = true;
            minimizeBtn.remove();
            button.innerHTML = 'üìù';
            button.style.background = 'rgba(0, 123, 255, 0.6)';
            button.style.display = 'flex';
        };
        
        document.body.appendChild(minimizeBtn);
    }
    
    button.onclick = function() {
        if (isMinimized) {
            isMinimized = false;
            button.innerHTML = 'üí¨';
            button.style.background = 'linear-gradient(135deg, #007bff, #0056b3)';
        }
        showSurvey();
        createMinimizeButton();
    };
    
    document.body.appendChild(button);
    
    // Auto-show after 30 seconds
    setTimeout(function() {
        if (!widget && !isMinimized) {
            showSurvey();
            createMinimizeButton();
        }
    }, 30000);
})();
</script>
{{/tallyConfig.surveyId}}

