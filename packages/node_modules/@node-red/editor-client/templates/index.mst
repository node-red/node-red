{{/tallyConfig.surveyId}}
{{#tallyConfig.surveyId}}
<script>
window.TallyConfig = {
  "{{tallyConfig.surveyId}}": {
    popup: {
      emoji: { text: 'ðŸ’¬', animation: 'none' },
      hideTitle: true,
      open: { trigger: 'immediate' },
      customCSS: `
        .tally-popup { z-index: 10000 !important; }
        .tally-popup-overlay { background: rgba(143, 0, 0, 0.1) !important; }
        .tally-button { background: #8f0000 !important; border-color: #8f0000 !important; }
      `
    }
  }
};

// Simple draggable widget implementation
(function() {
  let widget = null;
  
  const button = document.createElement('div');
  button.innerHTML = 'ðŸ’¬';
  button.style.cssText = `
    position: fixed; bottom: 20px; right: 20px; width: 60px; height: 60px;
    border-radius: 30px; background: #8f0000; color: white; display: flex;
    align-items: center; justify-content: center; cursor: move;
    box-shadow: 0 4px 15px rgba(143, 0, 0, 0.3); font-size: 24px; z-index: 9999;
    user-select: none;
  `;
  
  // Make draggable
  let isDragging = false;
  button.addEventListener('mousedown', e => { isDragging = true; });
  document.addEventListener('mousemove', e => {
    if (!isDragging) return;
    button.style.left = e.clientX - 30 + 'px';
    button.style.top = e.clientY - 30 + 'px';
    button.style.right = 'auto';
    button.style.bottom = 'auto';
  });
  document.addEventListener('mouseup', () => { isDragging = false; });
  
  button.onclick = () => {
    widget = Tally.openPopup('{{tallyConfig.surveyId}}', {
      onOpen: () => button.style.display = 'none',
      onClose: () => { widget = null; button.style.display = 'flex'; }
    });
  };
  document.body.appendChild(button);
  
  // Immediate popup trigger
  setTimeout(() => {
    widget = Tally.openPopup('{{tallyConfig.surveyId}}', {
      onOpen: () => button.style.display = 'none',
      onClose: () => { widget = null; button.style.display = 'flex'; }
    });
  }, 100);
})();
</script>
{{/tallyConfig.surveyId}}

